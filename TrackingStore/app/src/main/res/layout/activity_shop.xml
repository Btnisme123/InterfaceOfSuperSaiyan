<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vulan.com.trackingstore.ui.activity.ShopActivity">
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_title_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_50"
        app:tabMaxWidth="0dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/colorTransparentIcon"
        android:background="@color/colorPrimary"/>
    <FrameLayout
        android:id="@+id/fragment_container_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_size_50"></android.support.v4.view.ViewPager>
    </FrameLayout>

</RelativeLayout>
