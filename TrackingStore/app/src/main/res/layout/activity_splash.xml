<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/common_size_50"
        android:src="@drawable/splash_background" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/common_size_40"
        android:layout_height="@dimen/common_size_40"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_size_350"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_350"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_network"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_30"
            android:gravity="center"
            android:visibility="gone"
            android:text="Mạng không khả dụng vui lòng thử lại"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/tv_reload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/common_size_100"
            android:gravity="center"
            android:text="Thử lại"
            android:visibility="gone"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/common_text_size_17" />
    </LinearLayout>

</RelativeLayout>