<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/common_size_5"
    app:cardPreventCornerOverlap="false">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_item_foods"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_150"
        android:layout_gravity="center"
        android:background="@drawable/raised_button"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/image_food"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chicken" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="#56e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_50"
            android:layout_marginTop="@dimen/common_size_3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:id="@+id/text_food_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:maxLines="1"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_10"
                android:textStyle="bold" />


            <TextView
                android:textColor="@color/black"
                android:id="@+id/text_food_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/common_size_5"
                android:text="123"
                android:textSize="@dimen/common_text_size_10" />
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>