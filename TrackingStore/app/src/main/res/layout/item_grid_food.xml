<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/common_size_5"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/linear_item_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_250"
        android:background="@drawable/raised_button"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_food"
            android:layout_width="@dimen/common_size_80"
            android:layout_height="@dimen/common_size_80" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_food_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:singleLine="true"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="@dimen/common_text_size_10"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_food_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/common_size_5"
                android:text="123"
                android:textSize="@dimen/common_text_size_10" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>