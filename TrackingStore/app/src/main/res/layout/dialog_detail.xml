<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/common_size_450"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="@dimen/common_size_5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_logo"
            android:layout_width="@dimen/common_size_30"
            android:layout_height="@dimen/common_size_30"
            android:src="@drawable/mc_donald"
            android:layout_marginLeft="@dimen/common_size_5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_30"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_size_10"
            android:text="KFC 129 Cau Giay"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_17"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/common_size_150"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_food"
            android:layout_width="@dimen/common_size_150"
            android:layout_height="@dimen/common_size_150"
            android:layout_gravity="center"
            android:src="@drawable/nemran" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_20"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryTransparent"
            android:gravity="center"
            android:text="30%"
            android:textColor="@color/white"
            android:textSize="@dimen/common_size_15" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_10"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/common_size_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_30"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Fuckin' chicken"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_20"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="@dimen/common_size_300"
        android:layout_height="@dimen/common_size_150"
        android:layout_gravity="center"
        android:padding="@dimen/common_size_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_size_5"
            android:gravity="center"
            android:text="@string/describe_kfc"
            android:textSize="@dimen/common_size_15" />
    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_60"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/common_size_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_60"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/common_size_3"
                android:text="100.000"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_30" />

            <TextView
                android:layout_width="@dimen/common_size_70"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_price"
                android:gravity="center"
                android:padding="@dimen/common_size_3"
                android:text="VND"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size_30" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
