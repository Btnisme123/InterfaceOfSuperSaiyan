<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgProductFrag"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_50"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Chi tiết sản phẩm"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_17"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/common_size_5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_shop_dt"
            android:layout_width="@dimen/common_size_40"
            android:layout_height="@dimen/common_size_40"
            android:src="@drawable/blues_logo" />

        <TextView
            android:id="@+id/tv_name_shop_dt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_size_30"
            android:layout_marginLeft="@dimen/common_size_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="The Blues"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/common_text_size_15" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBgProductFrag"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/common_size_5">

                <RelativeLayout
                    android:layout_width="@dimen/common_size_250"
                    android:layout_height="@dimen/common_size_250">

                    <ImageView
                        android:layout_width="@dimen/common_size_250"
                        android:layout_height="@dimen/common_size_250"
                        android:background="@drawable/border_text" />

                    <ImageView
                        android:id="@+id/img_product_dt"
                        android:layout_width="@dimen/common_size_250"
                        android:layout_height="@dimen/common_size_250"
                        android:padding="@dimen/common_size_2"
                        android:src="@drawable/jacket_product" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/common_size_5">

                    <TextView
                        android:id="@+id/tv_product_name_dt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_size_5"
                        android:gravity="center"
                        android:text="NIKE AIR HUARACHE ULTRA BREATHE"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/common_text_size_17"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_dt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_size_5"
                        android:gravity="center"
                        android:padding="@dimen/common_size_5"
                        android:text="111300.000 VND"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/common_text_size_15" />
                    <TextView
                        android:id="@+id/tv_compare"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_size_30"
                        android:text="So sánh"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/common_text_size_15"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/common_size_5"
                        android:padding="@dimen/common_size_5"
                        android:background="@drawable/border_text"
                        android:drawableLeft="@drawable/ic_compare"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_size_10"
                android:paddingLeft="@dimen/common_size_10"
                android:paddingRight="@dimen/common_size_10"
                android:paddingTop="@dimen/common_size_10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_product_small_dt"
                    android:layout_width="@dimen/common_size_40"
                    android:layout_height="@dimen/common_size_40"
                    android:src="@drawable/blues_logo" />

                <TextView
                    android:id="@+id/tv_descipt_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_size_10"
                    android:text="dkasjdldsadasdsaddasdkajdlđasadsdadsadasdasdsadasdasdasdsadkajlkasjdklasdjkladsjssaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaasssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
                    android:textSize="@dimen/common_text_size_15" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_25"
                android:layout_marginLeft="@dimen/common_size_10"
                android:layout_marginTop="@dimen/common_size_10"
                android:gravity="center_vertical"
                android:text="Sản phẩm cùng loại"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_text_size_17"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_product_dt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_70"
                android:layout_marginBottom="@dimen/common_size_10"
                android:layout_marginTop="@dimen/common_size_5"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>