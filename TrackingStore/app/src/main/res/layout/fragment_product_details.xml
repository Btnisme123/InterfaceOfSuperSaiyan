<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_50"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Sản phẩm"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_17"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_size_10">


        <TextView
            android:id="@+id/tv_name_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_30"
            android:gravity="center_vertical"
            android:text="Áo khoác nam adasdasdasd"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/common_text_size_17" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_30"
            android:gravity="center_vertical"
            android:text="300.000 VND"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/common_text_size_15" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_300"
            android:layout_marginTop="@dimen/common_size_10"
            android:background="@drawable/border_text"
            android:scaleType="centerCrop"
            android:src="@drawable/jacket_product" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_size_10"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/common_size_40"
                android:layout_height="@dimen/common_size_40"
                android:src="@drawable/jacket_product" />

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_size_10"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_descipt_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dkasjdlkajdlkajlkasjdklasdjkladsjsssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss" />
            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/common_size_5">


        </LinearLayout>
    </LinearLayout>
</LinearLayout>