<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_info_restaurant"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_40"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="8"
        android:background="@color/colorPrimaryTransparent"
        android:padding="@dimen/common_size_5">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/common_size_30"
            android:layout_height="@dimen/common_size_30"
            android:src="@drawable/mc_donald"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/text_location"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_size_30"
            android:text="Mc Donal"
            android:textStyle="italic"
            android:textSize="@dimen/common_text_size_20"
            android:layout_weight="5"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/text_meter"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_size_30"
            android:text="20m"
            android:textStyle="italic"
            android:textSize="@dimen/common_text_size_20"
            android:layout_weight="2"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_info_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout_info_restaurant"
        android:padding="@dimen/common_size_10">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_food"
            android:layout_width="@dimen/common_size_80"
            android:layout_height="@dimen/common_size_80"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_chicken" />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_30"
            android:text="Chicken"
            android:textStyle="bold"
            android:textSize="@dimen/common_text_size_20"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_60"
            android:textSize="@dimen/common_text_size_15"
            android:gravity="center"
            android:text="Thịt gà thơm ngon ,bổ dưỡng ,giảm giá nhân ngày 20/10"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_go_to_restaurant"
            android:layout_width="@dimen/common_size_180"
            android:layout_height="@dimen/common_size_30"
            android:layout_gravity="center"
            app:cardElevation="@dimen/common_size_2"
            app:cardCornerRadius="@dimen/common_size_15">
            <TextView
                android:layout_width="@dimen/common_size_180"
                android:layout_height="@dimen/common_size_30"
                android:textSize="@dimen/common_text_size_15"
                android:gravity="center"
                android:text="Watch More"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>