<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#56e7e7e7"
    style="@style/AppTheme">

    <ImageView
        android:id="@+id/button_menu_left"
        android:layout_width="@dimen/common_size_40"
        android:layout_height="@dimen/common_size_40"
        android:src="@drawable/ic_list_black"
        android:padding="@dimen/common_size_10" />

    <ImageView
        android:id="@+id/button_menu_right"
        android:layout_width="@dimen/common_size_40"
        android:layout_height="@dimen/common_size_40"
        android:layout_gravity="end"
        android:padding="@dimen/common_size_10"
        android:src="@drawable/ic_home_black" />
</android.support.v7.widget.Toolbar>