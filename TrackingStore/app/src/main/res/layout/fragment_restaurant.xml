<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/banner_restaurant"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/kfc_banner" />

    <View
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#70000000" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_restaurant"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/kfc_logo" />

    <TextView
        android:id="@+id/tv_name_restaurant"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/logo_restaurant"
        android:layout_toRightOf="@id/logo_restaurant"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="KFC INDOCHINA"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_restaurant"
        android:layout_toRightOf="@id/logo_restaurant"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="@string/describe_kfc"
        android:textColor="#9f9b9b" />

    <View
        android:id="@+id/view_line"
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_below="@id/logo_restaurant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#ccc8c8" />

    <ScrollView
        android:id="@+id/list_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_line"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_food"
                android:layout_width="@dimen/restaurant_text_height"
                android:layout_height="@dimen/restaurant_text_height"
                android:background="@drawable/food_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_text_height"
                android:text="Food"
                android:textStyle="italic"
                android:layout_toRightOf="@id/icon_food"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textSize="@dimen/restaurant_item_text_size" />
            <ImageView
                android:id="@+id/banner_food"
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_banner_size"
                android:background="@mipmap/ic_launcher"
                android:layout_below="@+id/icon_food"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/icon_drink"
                android:layout_width="@dimen/restaurant_text_height"
                android:layout_height="@dimen/restaurant_text_height"
                android:layout_below="@+id/banner_food"
                android:background="@drawable/drink_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_text_height"
                android:text="Drink"
                android:textStyle="italic"
                android:layout_below="@+id/banner_food"
                android:layout_toRightOf="@id/icon_drink"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textSize="@dimen/restaurant_item_text_size" />

            <ImageView
                android:id="@+id/banner_drink"
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_banner_size"
                android:layout_below="@id/icon_drink"
                android:layout_marginTop="5dp"
                android:background="@mipmap/ic_launcher" />
            <ImageView
                android:id="@+id/icon_other"
                android:layout_width="@dimen/restaurant_text_height"
                android:layout_height="@dimen/restaurant_text_height"
                android:layout_below="@id/banner_drink"
                android:background="@drawable/other_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_text_height"
                android:text="Other"
                android:textStyle="italic"
                android:layout_below="@id/banner_drink"
                android:layout_toRightOf="@id/icon_drink"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textSize="@dimen/restaurant_item_text_size" />

            <ImageView
                android:id="@+id/banner_other"
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurant_banner_size"
                android:layout_below="@id/icon_other"
                android:layout_marginTop="5dp"
                android:background="@mipmap/ic_launcher" />


        </RelativeLayout>


    </ScrollView>
</RelativeLayout>