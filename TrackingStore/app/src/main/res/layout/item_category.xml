<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_size_5">

    <ImageView
        android:id="@+id/img_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_165"
        android:scaleType="fitXY"
        android:src="@drawable/shoe_banner" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_40"
        android:layout_marginTop="@dimen/common_size_105"
        android:background="@color/colorBgCategoryTransparent" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_40"
        android:layout_marginTop="@dimen/common_size_105"
        android:gravity="center"
        android:text="Man Clothes"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_15"
        android:textStyle="bold" />

</RelativeLayout>

