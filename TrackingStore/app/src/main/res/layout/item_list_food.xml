<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_100"
    android:layout_gravity="center">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/image_food"
            android:layout_height="@dimen/common_size_80"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_chicken"
            app:layout_widthPercent="40%" />

        <TextView
            android:gravity="center"
            android:id="@+id/text_food_name"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/image_food"
            android:singleLine="true"
            android:text="123"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_10"
            android:textStyle="bold"
            app:layout_widthPercent="30%" />


        <TextView
            android:gravity="center"
            android:layout_toRightOf="@id/text_food_name"
            android:id="@+id/text_food_price"
            app:layout_widthPercent="30%"
            android:layout_height="match_parent"
            android:padding="@dimen/common_size_5"
            android:text="123"
            android:textSize="@dimen/common_text_size_10" />
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>

