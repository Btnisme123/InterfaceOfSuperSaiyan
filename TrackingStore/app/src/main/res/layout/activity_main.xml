<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="@dimen/comon_size_300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include layout="@layout/nav_header" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/left_recycler_navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/comon_size_300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/common_size_10"
        android:background="@android:color/white"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/right_recycler_navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_10" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <Button
            android:id="@+id/button_menu_left"
            android:layout_width="@dimen/common_size_40"
            android:layout_height="@dimen/common_size_40"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/common_size_10"
            android:layout_marginTop="@dimen/common_size_10"
            android:background="@drawable/mc_donald" />

        <Button
            android:id="@+id/button_menu_right"
            android:layout_width="@dimen/common_size_40"
            android:layout_height="@dimen/common_size_40"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/common_size_10"
            android:layout_marginTop="@dimen/common_size_10"
            android:background="@drawable/mc_donald" />

        <Button
            android:id="@+id/button_icon"
            android:layout_width="@dimen/common_size_40"
            android:layout_height="@dimen/common_size_40"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/mc_donald" />

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>