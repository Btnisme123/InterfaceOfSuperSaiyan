<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_30"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/common_size_10"
        android:text="Jacket HTML abc black"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/common_text_size_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_price_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_30"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/common_size_10"
        android:text="1000000 VND"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/common_text_size_15" />


    <ImageView
        android:id="@+id/img_product_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_300"
        android:src="@drawable/jacket_product" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_equivalent_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_size_10"></android.support.v7.widget.RecyclerView>
</LinearLayout>
