<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_size_5"
        app:cardCornerRadius="@dimen/common_size_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_30"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_size_10"
                android:text="@string/food"
                android:textSize="@dimen/common_text_size_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_size_5">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_size_40"
                    android:background="@color/color_ed_search"
                    android:drawableRight="@drawable/ic_add"
                    android:hint="@string/text_hint_search"
                    android:padding="@dimen/common_size_10"
                    android:textColorHint="@color/colorSecondaryText"
                    android:textSize="@dimen/common_text_size_15" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_size_5">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_10"
            app:cardElevation="@dimen/common_size_5">

            <GridView
                android:id="@+id/grid_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_400"></GridView>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/common_size_25"
            android:layout_weight="2"
            android:gravity="center">
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_size_30"
                android:layout_gravity="center_vertical"
                android:thumbTint="@color/black"
                android:backgroundTint="#ff00"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/common_size_25"
            android:layout_weight="6"
            android:layout_marginLeft="@dimen/common_size_10"
            android:text="@string/notication_search"
            android:textSize="@dimen/common_text_size_20"/>
    </LinearLayout>


</LinearLayout>