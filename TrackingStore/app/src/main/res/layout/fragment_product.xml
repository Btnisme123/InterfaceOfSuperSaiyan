<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_category_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_50"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Man clothes"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_17"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/common_size_3"
        android:layout_marginLeft="@dimen/common_size_3"
        android:layout_marginRight="@dimen/common_size_3"
        android:background="@color/white"></android.support.v7.widget.RecyclerView>
</LinearLayout>